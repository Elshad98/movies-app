<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/movie_list_item_card_view_margin_top"
    android:layout_marginEnd="@dimen/movie_list_item_card_view_margin_end"
    android:layout_marginStart="@dimen/movie_list_item_card_view_margin_start"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/cv_iv_movie_poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/movie_list_item_poster_height"
            android:background="@color/grey_charcoal"
            android:scaleType="centerCrop"
            app:riv_border_width="0dp"
            app:riv_corner_radius="@dimen/image_corner_radius"
            app:riv_mutate_background="true"
            app:riv_oval="false" />

        <TextView
            android:id="@+id/cv_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/movie_list_item_title_margin_start"
            android:layout_marginTop="@dimen/movie_list_item_title_margin_top"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_medium"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="@dimen/movie_list_item_title_text_size" />
    </LinearLayout>
</androidx.cardview.widget.CardView>